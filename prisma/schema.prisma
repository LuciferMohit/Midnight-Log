// The Master Contract
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. Core User (Shared) ---
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  
  // Relations to Modules
  habits    Habit[]
  media     MediaItem[]
  projects  Project[]
  timeBlocks TimeBlock[]
}

// --- 2. Habits Module (Friend A) ---
model Habit {
  id          String       @id @default(uuid())
  title       String
  frequency   String       // "DAILY", "WEEKLY"
  energyLevel EnergyLevel  @default(MEDIUM) // Which time of day this habit fits best
  duration    Int          @default(60) // Duration in minutes
  defaultTime String?      // Optional fixed time anchor (Format: "HH:MM")
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  logs        HabitLog[]
  timeBlocks  TimeBlock[]  // Reverse relation from TimeBlock
}

model HabitLog {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  status    String   // "COMPLETED", "SKIPPED"
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id])
}

// --- 3. Media Module (Friend B) ---
model MediaItem {
  id             String   @id @default(uuid())
  title          String
  type           String   // "GAME", "MOVIE", "SHOW", "BOOK"
  status         MediaStatus @default(BACKLOG)
  totalDuration  Int?     // HLTB Hours
  createdAt      DateTime @default(now())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
}

enum MediaStatus {
  BACKLOG
  IN_PROGRESS
  COMPLETED
  DROPPED
}

enum EnergyLevel {
  LOW
  MEDIUM
  HIGH
}

// --- 4. Projects Module (Friend C) ---
model Project {
  id        String   @id @default(uuid())
  title     String
  status    String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timeBlocks TimeBlock[] // Reverse relation from TimeBlock
}
// --- 5. Scheduler Module (Lucifer) ---
model TimeBlock {
  id        String   @id @default(uuid())
  userId    String
  day       Int      // 0-6 (Mon-Sun)
  slotIndex Int      // 0-47 (00:00 - 23:30)
  isOccupied Boolean @default(false)
  
  // Links to specific tasks
  habitId   String?  // Optional: Linked to a Habit
  habit     Habit?   @relation(fields: [habitId], references: [id], onDelete: SetNull)
  
  projectId String?  // Optional: Linked to a Project
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, day, slotIndex]) // Prevents two blocks in the same slot
}