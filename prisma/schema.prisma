// The Master Contract
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. Core User (Shared) ---
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  
  // Relations to Modules
  habits    Habit[]
  media     MediaItem[]
  projects  Project[]
  timeBlocks TimeBlock[]
}

// --- 2. Habits Module (Friend A) ---
model Habit {
  id          String   @id @default(uuid())
  title       String
  frequency   String   // "DAILY", "WEEKLY"
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  logs        HabitLog[]
}

model HabitLog {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  status    String   // "COMPLETED", "SKIPPED"
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id])
}

// --- 3. Media Module (Friend B) ---
model MediaItem {
  id             String   @id @default(uuid())
  title          String
  type           String   // "GAME", "MOVIE", "SHOW", "BOOK"
  status         MediaStatus @default(BACKLOG)
  totalDuration  Int?     // HLTB Hours
  createdAt      DateTime @default(now())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
}

enum MediaStatus {
  BACKLOG
  IN_PROGRESS
  COMPLETED
  DROPPED
}

// --- 4. Projects Module (Friend C) ---
model Project {
  id        String   @id @default(uuid())
  title     String
  status    String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
// --- 5. Scheduler Module (Lucifer) ---
model TimeBlock {
  id        String   @id @default(uuid())
  day       String   // "MONDAY", "TUESDAY", etc.
  slotIndex Int      // 0 to 47 (representing the 48 half-hour slots in a day)
  type      String   // "OCCUPIED" (User set) or "ALLOCATED" (Algo set)
  
  // Optional: If the algo filled this slot, what did it put here?
  activityId String? // ID of the Project or Habit
  activityType String? // "HABIT" or "PROJECT"

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  @@unique([userId, day, slotIndex]) // Prevents two blocks in the same slot
}